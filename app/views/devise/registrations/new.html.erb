<% content_for :title do %>
  <title>Sign up</title>
<% end %>


<div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
 <%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class:"form-horizontal"}) do |f| %>
   
    <h2 class="form-signin-heading text-center">Sign up</h2>

    <div class="form-group"> 
      <div class="col-sm-12">
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-user"></span>
          <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name', :autofocus => true, :required => true %>
        </div>
      </div>
    </div>

    <div class="form-group"> 
      <div class="col-sm-12">
        <div class="input-group">
          <span class="input-group-addon"><b>@</b></span>
          <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email address', :autofocus => true, :required => true %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-asterisk"></span>
          <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password',  autocomplete: "off", :required => true %>
          </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-asterisk"></span>
        <%= f.password_field :password_confirmation,  :class => 'form-control', :placeholder => 'Password confirmation',  autocomplete: "off", :required => true %>
        </div>
      </div>
    </div>

    
    <div class="form-group">
      <div class="col-sm-12">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit "Sign up", class:"btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>