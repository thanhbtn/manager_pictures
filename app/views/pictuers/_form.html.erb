<% if @pictuer.nil? %>
  <h2>Pictuer not found</h2>
<% else %>
  <%= form_for(@pictuer, :html => { class: "form-horizontal"} ) do |f| %>
    <% if @pictuer.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@pictuer.errors.count, "error") %>
          prohibited this task from being saved:
        </h2>
        <ul>
          <% @pictuer.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-7 col-sm-10 col-md-7">
              <h3 class="panel-title">Pictuer upload</h3>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= f.label :title, class:"col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :title , class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, class:"col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_area :description , class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">Image</label>
            <div class="col-sm-10">
              <%= f.file_field :image%>
            </div>
          </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Public</label>
            <div class="col-sm-10">
              <label class="checkbox">
                <%= f.check_box :active , {class: "" }, "1", "0" %>
              </label>
            </div>
          </div>
        <div class="panel-footer">
          <%= f.submit 'Upload', class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
