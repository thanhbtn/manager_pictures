<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Manager user</h3>
			</div>
			<div class="panel-body">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>User ID</th>
							<th>Email</th>
							<th>Approved</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do  |u| %>
							<tr>
								<td><%= u.id%></td>
								<td><%= u.email%></td>
								<td><%= u.approved%></td>
								<td><%= link_to "Destroy", u, method: :delete, data: { confirm: "You sure?" } %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>