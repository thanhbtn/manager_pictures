<%= nested_form_for(@album, :html => {class:"form-horizontal"}) do |f| %>
<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Ablum</h3>
		</div>
		<div class="panel-body">
			<div class="form-group">
				<%= f.label :title, class: "col-sm-3 control-label"%>
				<div class="col-sm-9">
					<%= f.text_field :title,  :class => 'form-control', :placeholder => "#{I18n.t('activerecord.attributes.album.title')}", :autofocus => true, :required => true %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :description, class: "col-sm-3 control-label"%>
				<div class="col-sm-9">
					<%= f.text_field :description,  :class => 'form-control', :placeholder => "#{I18n.t('activerecord.attributes.album.description')}", :required => true %>
				</div>
			</div>
			<div class="form-group">
				<label class = "col-sm-3 control-label"><%= I18n.t('album.public')%></label>
				<div class="col-sm-9">
					<div class="checkbox">
						<%= f.label :active do %>
							<%= f.check_box :active %>
						<% end %>
					</div>
				</div>
			</div>

			<%= f.fields_for :pictuers do |pictuer_form| %>
				<hr class="divider">
				<div class="form-group">
				  <%= pictuer_form.label :title, class: "col-sm-3 control-label"%>
				  <div class="col-sm-9">
				  	<%= pictuer_form.text_field :title, :class => 'form-control', :required => true %>
				  </div>
				</div>
				<div class="form-group">
					 <%= pictuer_form.label :description, class: "col-sm-3 control-label"%>
					 <div class="col-sm-9">
					 	<%= pictuer_form.text_field :description, :class => 'form-control', :required => true  %>
					 </div>
				</div>
				<div class="form-group">
					<%= pictuer_form.label :image, class:"col-sm-3 control-label"%>
					<div class="col-sm-9">
						<%= pictuer_form.file_field :image, :class => 'form-control' %>
					</div>
				</div>
				<div class="form-group">
				<label class = "col-sm-3 control-label">Public</label>
				<div class="col-sm-9">
					<div class="checkbox">
						<%= pictuer_form.label :active do %>
							<%= pictuer_form.check_box :active %>
						<% end %>
					</div>
				</div>
			</div>
				<div class="form-group">
					<%= pictuer_form.link_to_remove "Remove this pictuer", class:"pull-right col-sm-4" %>
				</div>
			<% end %>
			<%= f.link_to_add "Add a pictuer", :pictuers %>
			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-9">
					<%= f.submit "#{t 'album.btn_upload'}", class:"btn btn-primary btn-block" %>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>	
<% content_for :javascript do %>
	<%= javascript_include_tag "nested_form" %>
<% end %>